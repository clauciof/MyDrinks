<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.DetalhesFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/f_drink_detail_img"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="16dp">

                <TextView
                    android:text="strDrink"
                    android:textSize="21dp"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:layout_marginTop="23dp"
                    android:id="@+id/f_drink_detail_nome"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="categoria"
                    android:id="@+id/f_drink_categoria"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"/>
                <TextView
                    android:text="tipo"
                    android:id="@+id/f_drink_detail_tipo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"/>

                <TextView
                    android:text="Ingredientes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:layout_marginBottom="14dp"/>

                <TextView
                    android:id="@+id/ingrediente1"
                    android:text="ingrediente1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:layout_marginBottom="14dp" />

                <TextView
                    android:id="@+id/ingrediente2"
                    android:text="ingrediente2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:layout_marginBottom="14dp" />

                <TextView
                    android:id="@+id/ingrediente3"
                    android:text="ingrediente3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:layout_marginBottom="14dp" />

                <TextView
                    android:id="@+id/ingrediente4"
                    android:text="ingrediente4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:layout_marginBottom="14dp" />

                <TextView
                    android:id="@+id/ingrediente5"
                    android:text="ingrediente5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:layout_marginBottom="14dp" />


            </LinearLayout>
        </LinearLayout>

    </ScrollView>
